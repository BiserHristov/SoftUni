{{>header}}
<h1>Edit Offer</h1>
<p class="message"></p>
<form action="/edit/{{key}}" method="POST">
    <div>
        <input type="text" placeholder="Name..." name="model" value="{{model}}">
    </div>
    <div>
        <input type="text" placeholder="Price..." name="price" value="{{price}}">
    </div>
    <div>
        <input type="text" placeholder="Image url..." name="imgURL" value="{{imgURL}}">
    </div>
    <div>
        <textarea placeholder="Give us some description about this offer..."
            name="description">{{description}}</textarea>
    </div>
    <div>
        <input type="text" placeholder="Brand..." name="brand" value="{{brand}}">
    </div>
    <div>
        <button type="submit">Edit</button>
    </div>
</form>
{{>footer}}