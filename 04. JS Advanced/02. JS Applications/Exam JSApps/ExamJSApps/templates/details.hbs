{{>header}}
<!-- Details  -->
<section id="viewdestinationDetails">
    <div class="destination-area">
        <div class="destination-area-left">
            <img src={{imgUrl}} alt="">
        </div>
        <div class="destination-area-right">
            <h3>{{destination}}</h3>
            <div>to {{city}}</div>
            <div class="data-and-time">
                {{departureDate}}
                <a href="/edit/{{_ownerId}}/{{_id}}" class="edit-destination-detail"></a>
            </div>
            <div>
                {{duration}} days
            </div>
        </div>
    </div>
</section>
{{>footer}}