{{>header}}
<div class="offer-details">
    <h1>{{brand}} {{name}}</h1>
    <div class="info">
        <img src="{{imgURL}}" alt="">
        <div class="description">{{description}}
            <br>
            <p>Buyers: {{count}}</p>
            <br>
            <p class="price">${{price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if isOwner}}
        <a href="/edit/{{_id}}">Edit</a>
        <a href="/delete/{{_id}}">Delete</a>
        {{else}}
        {{#unless isBought}}
        <a href="/buy/{{_id}}">Buy</a>
        {{else}}
        <span>You bought it</span>
        {{/unless}}
        {{/if}}
    </div>
</div>
{{>footer}}